<UserControl x:Class="AssetProcessor.Controls.HistogramPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">

    <Expander Header="Histogram" IsExpanded="True" Style="{DynamicResource RightPanelExpanderStyle}">
        <StackPanel Orientation="Vertical">
            <!-- Histogram Plot -->
            <Border BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" Margin="0,0,0,4" Height="128">
                <oxy:PlotView Height="128" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0,0,0,0" DefaultTrackerTemplate="{DynamicResource HistogramTrackerTemplate}"
                              Model="{Binding HistogramPlotModel}"/>
            </Border>

            <!-- Histogram Statistics -->
            <Border BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1" Background="{DynamicResource ThemeBackgroundAlt}" Padding="6,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 1 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Min:" FontSize="9" FontWeight="SemiBold" Margin="0,0,4,2"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding HistogramMin}" FontSize="9" Margin="0,0,8,2"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Max:" FontSize="9" FontWeight="SemiBold" Margin="0,0,4,2"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding HistogramMax}" FontSize="9" Margin="0,0,0,2"/>

                    <!-- Row 2 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Mean:" FontSize="9" FontWeight="SemiBold" Margin="0,0,4,2"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding HistogramMean}" FontSize="9" Margin="0,0,8,2"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Median:" FontSize="9" FontWeight="SemiBold" Margin="0,0,4,2"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding HistogramMedian}" FontSize="9" Margin="0,0,0,2"/>

                    <!-- Row 3 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="StdDev:" FontSize="9" FontWeight="SemiBold" Margin="0,0,4,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding HistogramStdDev}" FontSize="9" Margin="0,0,8,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Pixels:" FontSize="9" FontWeight="SemiBold" Margin="0,0,4,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding HistogramPixels}" FontSize="9" Margin="0,0,0,0"/>
                </Grid>
            </Border>
        </StackPanel>
    </Expander>
</UserControl>
