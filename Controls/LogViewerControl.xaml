<UserControl x:Class="AssetProcessor.Controls.LogViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetProcessor"
             xmlns:settings="clr-namespace:AssetProcessor.Settings;assembly=AssetProcessor"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Style for log level filter buttons -->
        <Style x:Key="FilterButtonStyle" TargetType="ToggleButton">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Style for log items based on level -->
        <Style x:Key="LogItemStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeBackgroundAlt}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,0,1" Padding="8,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Filters:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>

                    <ToggleButton x:Name="FilterDebugBtn" Content="DEBUG" IsChecked="False"
                                  Style="{StaticResource FilterButtonStyle}"
                                  Checked="FilterButton_Changed" Unchecked="FilterButton_Changed"
                                  Foreground="#606060" Background="#E8E8E8"/>

                    <ToggleButton x:Name="FilterInfoBtn" Content="INFO" IsChecked="True"
                                  Style="{StaticResource FilterButtonStyle}"
                                  Checked="FilterButton_Changed" Unchecked="FilterButton_Changed"
                                  Foreground="#1976D2" Background="#E3F2FD"/>

                    <ToggleButton x:Name="FilterWarnBtn" Content="WARN" IsChecked="True"
                                  Style="{StaticResource FilterButtonStyle}"
                                  Checked="FilterButton_Changed" Unchecked="FilterButton_Changed"
                                  Foreground="#F57C00" Background="#FFF3E0"/>

                    <ToggleButton x:Name="FilterErrorBtn" Content="ERROR" IsChecked="True"
                                  Style="{StaticResource FilterButtonStyle}"
                                  Checked="FilterButton_Changed" Unchecked="FilterButton_Changed"
                                  Foreground="#D32F2F" Background="#FFEBEE"/>
                </StackPanel>

                <!-- Search Box -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,10,0">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="SearchTextBox" Width="250"
                             TextChanged="SearchTextBox_TextChanged"
                             VerticalContentAlignment="Center"
                             Padding="5,3"/>
                </StackPanel>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Scale:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Slider x:Name="LogScaleSlider" Width="100" Minimum="0.5" Maximum="2.0"
                            Value="{Binding Source={x:Static settings:AppSettings.Default}, Path=LogsTableScale, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True" VerticalAlignment="Center"
                            ToolTip="Adjust table scale (50% - 200%)" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ElementName=LogScaleSlider, Path=Value, StringFormat={}{0:P0}}"
                               VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="40"/>
                    <Button x:Name="AutoScrollBtn" Content="ðŸ“Œ Auto-scroll" Width="95" Height="26"
                            Click="AutoScrollBtn_Click"
                            ToolTip="Auto-scroll to bottom on new logs"
                            Margin="0,0,5,0"/>
                    <Button x:Name="ClearBtn" Content="ðŸ—‘ï¸ Clear" Width="75" Height="26"
                            Click="ClearBtn_Click"
                            ToolTip="Clear all logs"/>
                    <Button x:Name="ExportBtn" Content="ðŸ’¾ Export" Width="80" Height="26"
                            Click="ExportBtn_Click"
                            ToolTip="Export logs to file"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log Display -->
        <ListView x:Name="LogListView" Grid.Row="1"
                  ItemContainerStyle="{StaticResource LogItemStyle}"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  SelectionMode="Extended"
                  BorderThickness="0">
            <ListView.LayoutTransform>
                <ScaleTransform ScaleX="{Binding ElementName=LogScaleSlider, Path=Value}"
                                ScaleY="{Binding ElementName=LogScaleSlider, Path=Value}"/>
            </ListView.LayoutTransform>
            <ListView.View>
                <GridView AllowsColumnReorder="True">
                    <GridViewColumn Header="Time" Width="110" DisplayMemberBinding="{Binding Timestamp}"/>
                    <GridViewColumn Header="Level" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Level}" FontWeight="Bold" Foreground="{Binding LevelColor}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Logger" Width="200" DisplayMemberBinding="{Binding Logger}"/>
                    <GridViewColumn Header="Message" Width="600">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Message}"
                                          TextWrapping="NoWrap"
                                          Foreground="{Binding MessageColor}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource ThemeBackgroundAlt}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,1,0,0" Padding="8,3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" Grid.Column="0" Text="Ready" VerticalAlignment="Center" FontSize="10"/>
                <TextBlock x:Name="LogCountText" Grid.Column="1" Text="0 logs" VerticalAlignment="Center" FontSize="10" FontWeight="SemiBold"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
