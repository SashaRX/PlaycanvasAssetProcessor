<UserControl x:Class="AssetProcessor.Controls.LogViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetProcessor.Controls"
             xmlns:settings="clr-namespace:AssetProcessor.Settings;assembly=AssetProcessor"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource ThemeBackground}">
    <UserControl.Resources>
        <!-- Style for log level filter buttons (theme-aware) -->
        <Style x:Key="FilterButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeBackgroundAlt}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,0,1" Padding="8,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Filters:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" Foreground="{DynamicResource ThemeForeground}"/>

                    <ToggleButton x:Name="FilterDebugBtn" Content="DEBUG" IsChecked="False"
                                  Style="{StaticResource FilterButtonStyle}"
                                  Checked="FilterButton_Changed" Unchecked="FilterButton_Changed"/>

                    <ToggleButton x:Name="FilterInfoBtn" Content="INFO" IsChecked="True"
                                  Style="{StaticResource FilterButtonStyle}"
                                  Checked="FilterButton_Changed" Unchecked="FilterButton_Changed"/>

                    <ToggleButton x:Name="FilterWarnBtn" Content="WARN" IsChecked="True"
                                  Style="{StaticResource FilterButtonStyle}"
                                  Checked="FilterButton_Changed" Unchecked="FilterButton_Changed"/>

                    <ToggleButton x:Name="FilterErrorBtn" Content="ERROR" IsChecked="True"
                                  Style="{StaticResource FilterButtonStyle}"
                                  Checked="FilterButton_Changed" Unchecked="FilterButton_Changed"/>
                </StackPanel>

                <!-- Search Box -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,10,0">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource ThemeForeground}"/>
                    <TextBox x:Name="SearchTextBox" Width="250"
                             TextChanged="SearchTextBox_TextChanged"
                             VerticalContentAlignment="Center"
                             Padding="5,3"/>
                </StackPanel>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Scale:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource ThemeForeground}"/>
                    <Slider x:Name="LogScaleSlider" Width="100" Minimum="0.5" Maximum="2.0"
                            Value="{Binding Source={x:Static settings:AppSettings.Default}, Path=LogsTableScale, Mode=TwoWay}"
                            TickFrequency="0.1" IsSnapToTickEnabled="True" VerticalAlignment="Center"
                            ToolTip="Adjust table scale (50% - 200%)" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ElementName=LogScaleSlider, Path=Value, StringFormat={}{0:P0}}"
                               VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="40" Foreground="{DynamicResource ThemeForeground}"/>
                    <Button x:Name="AutoScrollBtn" Content="ðŸ“Œ Auto-scroll" Width="95" Height="26"
                            Click="AutoScrollBtn_Click"
                            ToolTip="Auto-scroll to bottom on new logs"
                            Margin="0,0,5,0"/>
                    <Button x:Name="ClearBtn" Content="ðŸ—‘ï¸ Clear" Width="75" Height="26"
                            Click="ClearBtn_Click"
                            ToolTip="Clear all logs"/>
                    <Button x:Name="ExportBtn" Content="ðŸ’¾ Export" Width="80" Height="26"
                            Click="ExportBtn_Click"
                            ToolTip="Export logs to file"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log Display - DataGrid for consistent behavior with other tables -->
        <DataGrid x:Name="LogDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="True"
                  CanUserResizeColumns="True"
                  CanUserReorderColumns="True"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  Background="{DynamicResource ThemeDataGridBackground}"
                  RowHeight="18"
                  FontFamily="Consolas, Courier New"
                  FontSize="11"
                  BorderThickness="0"
                  GridLinesVisibility="Horizontal"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  EnableRowVirtualization="True">
            <DataGrid.LayoutTransform>
                <ScaleTransform ScaleX="{Binding ElementName=LogScaleSlider, Path=Value}"
                                ScaleY="{Binding ElementName=LogScaleSlider, Path=Value}"/>
            </DataGrid.LayoutTransform>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Time" Width="100" MinWidth="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Timestamp}" Foreground="{DynamicResource ThemeForeground}" Padding="2,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Level" Width="60" MinWidth="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Level}" FontWeight="Bold" Foreground="{Binding LevelColor}" Padding="2,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Logger" Width="180" MinWidth="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Logger}" Foreground="{DynamicResource ThemeForeground}" Padding="2,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Message" Width="*" MinWidth="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Message}" TextTrimming="CharacterEllipsis"
                                       Padding="2,0" ToolTip="{Binding Message}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding MessageColor, Converter={x:Static local:NullCheckConverter.Instance}}" Value="False">
                                                <Setter Property="Foreground" Value="{Binding MessageColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource ThemeBackgroundAlt}" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,1,0,0" Padding="8,3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" Grid.Column="0" Text="Ready" VerticalAlignment="Center" FontSize="10" Foreground="{DynamicResource ThemeForeground}"/>
                <TextBlock x:Name="LogCountText" Grid.Column="1" Text="0 logs" VerticalAlignment="Center" FontSize="10" FontWeight="SemiBold" Foreground="{DynamicResource ThemeForeground}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
