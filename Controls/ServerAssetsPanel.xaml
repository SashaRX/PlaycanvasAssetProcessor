<UserControl x:Class="AssetProcessor.Controls.ServerAssetsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:AssetProcessor.Settings"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource ThemeBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeBackgroundAlt}" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Refresh and Filter -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" Content="Refresh" Click="RefreshButton_Click"
                            Background="#FF2196F3" Foreground="White" FontWeight="Bold"
                            Padding="12,6" Margin="0,0,8,0"
                            ToolTip="Refresh file list from B2 server"/>

                    <Button x:Name="ToggleViewButton" Content="â˜° List" Click="ToggleViewButton_Click"
                            Padding="12,6" Margin="0,0,8,0"
                            ToolTip="Toggle between tree and list view"/>

                    <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"
                               Foreground="{DynamicResource ThemeForeground}"/>
                    <ComboBox x:Name="FilterComboBox" Width="100" Margin="0,0,8,0"
                              SelectionChanged="FilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Textures"/>
                        <ComboBoxItem Content="Models"/>
                        <ComboBoxItem Content="JSON"/>
                    </ComboBox>

                    <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,5,0"
                               Foreground="{DynamicResource ThemeForeground}"/>
                    <ComboBox x:Name="StatusFilterComboBox" Width="120" Margin="0,0,8,0"
                              SelectionChanged="StatusFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Synced"/>
                        <ComboBoxItem Content="ServerOnly"/>
                        <ComboBoxItem Content="HashMismatch"/>
                    </ComboBox>
                </StackPanel>

                <!-- Center: Search -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"
                               Foreground="{DynamicResource ThemeForeground}"/>
                    <TextBox x:Name="SearchTextBox" Width="250" Padding="5,3"
                             TextChanged="SearchTextBox_TextChanged"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Right: Scale and Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Scale:" VerticalAlignment="Center" Margin="0,0,5,0"
                               Foreground="{DynamicResource ThemeForeground}"/>
                    <Slider x:Name="ServerScaleSlider" Width="100" Minimum="0.5" Maximum="2.0"
                            Value="{Binding Source={x:Static settings:AppSettings.Default}, Path=ServerTableScale, Mode=TwoWay}"
                            VerticalAlignment="Center" Margin="0,0,5,0"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            ToolTip="Adjust table scale (50% - 200%)"/>
                    <TextBlock Text="{Binding ElementName=ServerScaleSlider, Path=Value, StringFormat={}{0:P0}}"
                               VerticalAlignment="Center" Width="40" Margin="0,0,15,0"
                               Foreground="{DynamicResource ThemeForeground}"/>

                    <Button x:Name="DeleteSelectedButton" Content="Delete" Click="DeleteSelectedButton_Click"
                            Background="#FFF44336" Foreground="White"
                            Padding="12,6" Margin="0,0,8,0"
                            ToolTip="Delete selected files from server"/>

                    <Button x:Name="CopyUrlButton" Content="Copy URL" Click="CopyUrlButton_Click"
                            Padding="12,6"
                            ToolTip="Copy CDN URL to clipboard"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content: TreeView + DataGrid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="TreeColumn" Width="250" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Folder Tree -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="0,0,1,0">
                <TreeView x:Name="FolderTreeView"
                          Background="{DynamicResource ThemeBackground}"
                          BorderThickness="0"
                          SelectedItemChanged="FolderTreeView_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock Text="ðŸ“ " FontSize="12"/>
                                <TextBlock Text="{Binding DisplayName}" FontSize="12"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>

            <!-- Splitter -->
            <GridSplitter x:Name="TreeSplitter" Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                          Background="{DynamicResource ThemeBorder}"/>

            <!-- Files DataGrid -->
            <DataGrid Grid.Column="2" x:Name="ServerAssetsDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Extended"
                      SelectionChanged="ServerAssetsDataGrid_SelectionChanged"
                      GridLinesVisibility="Horizontal"
                      RowHeaderWidth="0"
                      Background="{DynamicResource ThemeDataGridBackground}"
                      Foreground="{DynamicResource ThemeForeground}"
                      BorderThickness="0"
                      CanUserSortColumns="True"
                      CanUserResizeColumns="True"
                      RowHeight="22"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.ScrollUnit="Pixel"
                      VirtualizingPanel.CacheLength="50"
                      VirtualizingPanel.CacheLengthUnit="Item"
                      EnableRowVirtualization="True"
                      ScrollViewer.CanContentScroll="True">

                <DataGrid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=ServerScaleSlider, Path=Value}"
                                    ScaleY="{Binding ElementName=ServerScaleSlider, Path=Value}"/>
                </DataGrid.LayoutTransform>

                <DataGrid.Columns>
                    <!-- File Name with link to source asset -->
                    <DataGridTemplateColumn Header="File Name" Width="2*" MinWidth="150" SortMemberPath="FileName">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Padding="4,2" TextTrimming="CharacterEllipsis" ToolTip="{Binding FileName}">
                                    <Hyperlink Click="GoToResourceLink_Click"
                                               Foreground="{DynamicResource ThemeForeground}"
                                               TextDecorations="None">
                                        <Run Text="{Binding FileName, Mode=OneWay}"/>
                                    </Hyperlink>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Type -->
                    <DataGridTextColumn Header="Type" Binding="{Binding FileType}" Width="80" MinWidth="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                                <Setter Property="Padding" Value="4,2"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Size -->
                    <DataGridTextColumn Header="Size" Binding="{Binding SizeDisplay}" Width="90" MinWidth="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="TextAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Sync Status -->
                    <DataGridTemplateColumn Header="Status" Width="110" MinWidth="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SyncStatus}"
                                           Foreground="{Binding SyncStatusColor}"
                                           FontWeight="SemiBold"
                                           Padding="4,2"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Uploaded At -->
                    <DataGridTextColumn Header="Uploaded" Binding="{Binding UploadedAtDisplay}" Width="140" MinWidth="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                                <Setter Property="Padding" Value="4,2"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- SHA1 -->
                    <DataGridTextColumn Header="SHA1" Binding="{Binding ContentSha1Short}" Width="100" MinWidth="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="FontFamily" Value="Consolas"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource ThemeBackgroundAlt}" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" Grid.Column="0"
                           Text="Click Refresh to load files from server"
                           Foreground="{DynamicResource ThemeForeground}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="CountText" Text="0 files"
                               Foreground="{DynamicResource ThemeForeground}"
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock x:Name="SizeText" Text="0 MB total"
                               Foreground="{DynamicResource ThemeForeground}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
