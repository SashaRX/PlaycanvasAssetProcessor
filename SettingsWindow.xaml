<Window
    x:Class="TexTool.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Project ID:" />
            <TextBox x:Name="ProjectIdTextBox" />
            <Label Content="Branch ID:" />
            <TextBox x:Name="BranchIdTextBox" />
            <Label Content="Playcanvas API Key:" />
            <TextBox x:Name="PlaycanvasApiKeyTextBox" />
            <Label Content="Base URL:" />
            <TextBox x:Name="BaseUrlTextBox" />
            <Label Content="Semaphore Limit:" />
            <TextBox x:Name="SemaphoreLimitTextBox" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Click="Save_Click" Margin="5" />
                <Button Content="Cancel" Click="Cancel_Click" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
