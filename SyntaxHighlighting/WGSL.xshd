<?xml version="1.0"?>
<SyntaxDefinition name="WGSL" extensions=".wgsl" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
  <Color name="Comment" foreground="#6A9955" />
  <Color name="String" foreground="#CE9178" />
  <Color name="Number" foreground="#B5CEA8" />
  <Color name="Keyword" foreground="#569CD6" fontWeight="bold" />
  <Color name="Type" foreground="#4EC9B0" />
  <Color name="Attribute" foreground="#C586C0" />
  <Color name="Function" foreground="#DCDCAA" />
  <Color name="Qualifier" foreground="#569CD6" />
  <Color name="BuiltIn" foreground="#9CDCFE" />

  <RuleSet>
    <!-- Comments -->
    <Span color="Comment" begin="//" />
    <Span color="Comment" multiline="true" begin="/\*" end="\*/" />

    <!-- Attributes -->
    <Span color="Attribute" begin="@">
      <RuleSet>
        <Keywords fontWeight="bold">
          <Word>align</Word>
          <Word>binding</Word>
          <Word>builtin</Word>
          <Word>compute</Word>
          <Word>const</Word>
          <Word>fragment</Word>
          <Word>group</Word>
          <Word>id</Word>
          <Word>interpolate</Word>
          <Word>invariant</Word>
          <Word>location</Word>
          <Word>size</Word>
          <Word>vertex</Word>
          <Word>workgroup_size</Word>
          <Word>diagnostic</Word>
          <Word>must_use</Word>
        </Keywords>
      </RuleSet>
    </Span>

    <!-- Numbers -->
    <Rule color="Number">
      \b0[xX][0-9a-fA-F]+[iu]?\b |
      \b[0-9]+\.?[0-9]*([eE][-+]?[0-9]+)?[fh]?\b |
      \b\.[0-9]+([eE][-+]?[0-9]+)?[fh]?\b
    </Rule>

    <!-- Keywords -->
    <Keywords color="Keyword">
      <Word>alias</Word>
      <Word>break</Word>
      <Word>case</Word>
      <Word>const</Word>
      <Word>const_assert</Word>
      <Word>continue</Word>
      <Word>continuing</Word>
      <Word>default</Word>
      <Word>diagnostic</Word>
      <Word>discard</Word>
      <Word>else</Word>
      <Word>enable</Word>
      <Word>false</Word>
      <Word>fn</Word>
      <Word>for</Word>
      <Word>if</Word>
      <Word>let</Word>
      <Word>loop</Word>
      <Word>override</Word>
      <Word>return</Word>
      <Word>struct</Word>
      <Word>switch</Word>
      <Word>true</Word>
      <Word>var</Word>
      <Word>while</Word>
      <Word>requires</Word>
    </Keywords>

    <!-- Storage Qualifiers -->
    <Keywords color="Qualifier">
      <Word>function</Word>
      <Word>private</Word>
      <Word>workgroup</Word>
      <Word>uniform</Word>
      <Word>storage</Word>
      <Word>read</Word>
      <Word>write</Word>
      <Word>read_write</Word>
    </Keywords>

    <!-- Scalar Types -->
    <Keywords color="Type">
      <Word>bool</Word>
      <Word>f16</Word>
      <Word>f32</Word>
      <Word>i32</Word>
      <Word>u32</Word>
    </Keywords>

    <!-- Vector Types -->
    <Keywords color="Type">
      <Word>vec2</Word>
      <Word>vec3</Word>
      <Word>vec4</Word>
      <Word>vec2i</Word>
      <Word>vec3i</Word>
      <Word>vec4i</Word>
      <Word>vec2u</Word>
      <Word>vec3u</Word>
      <Word>vec4u</Word>
      <Word>vec2f</Word>
      <Word>vec3f</Word>
      <Word>vec4f</Word>
      <Word>vec2h</Word>
      <Word>vec3h</Word>
      <Word>vec4h</Word>
      <Word>vec2bool</Word>
      <Word>vec3bool</Word>
      <Word>vec4bool</Word>
