<Window x:Class="AssetProcessor.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource ThemeBackground}">

    <StackPanel Margin="16,12,16,12" TextElement.Foreground="{DynamicResource ThemeForeground}">
        <!-- App Name -->
        <TextBlock Text="TexTool" FontSize="16" FontWeight="Bold"/>
        <TextBlock Text="PlayCanvas Asset Processor"
                   FontSize="10"
                   Foreground="{DynamicResource ThemeForegroundDim}"
                   Margin="0,0,0,8"/>

        <!-- Version -->
        <TextBlock x:Name="VersionText" FontSize="11"/>
        <TextBlock x:Name="BuildInfoText" FontSize="10" Foreground="{DynamicResource ThemeForegroundDim}" Margin="0,0,0,8"/>

        <!-- Copyright -->
        <TextBlock Text="SashaRX, 2021-2026" FontSize="10" Foreground="{DynamicResource ThemeForegroundDim}" Margin="0,0,0,10"/>

        <!-- OK Button -->
        <Button Content="OK" Width="70" Height="24" HorizontalAlignment="Right"
                Click="CloseButton_Click" IsDefault="True" IsCancel="True"/>
    </StackPanel>
</Window>
