<Window x:Class="AssetProcessor.Windows.ChunkEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Shader Chunk Editor"
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeBackground}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid x:Name="RootGrid" Background="{DynamicResource ThemeBackground}" TextElement.Foreground="{DynamicResource ThemeForeground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: Chunk Info -->
        <Grid x:Name="HeaderGrid" Grid.Row="0" Margin="10,10,10,10" Background="{DynamicResource ThemeBackground}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Chunk ID:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"
                       Foreground="{DynamicResource ThemeForeground}"/>
            <TextBox x:Name="ChunkIdTextBox" Grid.Column="1"
                     Text="{Binding ChunkId, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"/>

            <TextBlock Text="Type:" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,10,0"
                       Foreground="{DynamicResource ThemeForeground}"/>
            <ComboBox x:Name="ChunkTypeComboBox" Grid.Column="4"
                      ItemsSource="{Binding ChunkTypes}"
                      SelectedValue="{Binding ChunkType}"
                      VerticalContentAlignment="Center"/>

            <TextBlock Text="Description:" Grid.Column="6" VerticalAlignment="Center" Margin="0,0,10,0"
                       Foreground="{DynamicResource ThemeForeground}"/>
            <TextBox Grid.Column="7"
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"/>
        </Grid>

        <!-- Code Editors -->
        <TabControl x:Name="CodeTabControl" Grid.Row="1" Margin="10,0,10,0" Background="{DynamicResource ThemeBackground}" BorderThickness="0">
            <TabItem Header="GLSL">
                <Grid Background="{DynamicResource ThemeBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="GLSL Shader Code (WebGL)"
                               Foreground="{DynamicResource ThemeForegroundDim}" Margin="5,5,5,2" FontSize="11"/>

                    <TextBox x:Name="GlslEditor" Grid.Row="1"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             TextWrapping="NoWrap"
                             FontFamily="Consolas, Courier New, monospace"
                             FontSize="13"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Text="{Binding GlslCode, UpdateSourceTrigger=PropertyChanged}"
                             SpellCheck.IsEnabled="False"
                             Padding="5"/>
                </Grid>
            </TabItem>
            <TabItem Header="WGSL">
                <Grid Background="{DynamicResource ThemeBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="WGSL Shader Code (WebGPU)"
                               Foreground="{DynamicResource ThemeForegroundDim}" Margin="5,5,5,2" FontSize="11"/>

                    <TextBox x:Name="WgslEditor" Grid.Row="1"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             TextWrapping="NoWrap"
                             FontFamily="Consolas, Courier New, monospace"
                             FontSize="13"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Text="{Binding WgslCode, UpdateSourceTrigger=PropertyChanged}"
                             SpellCheck.IsEnabled="False"
                             Padding="5"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer: Buttons -->
        <Grid x:Name="FooterGrid" Grid.Row="2" Margin="10,10,10,10" Background="{DynamicResource ThemeBackground}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="UnsavedIndicator" Text="* Unsaved changes"
                           Foreground="Orange" VerticalAlignment="Center"
                           Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset" Click="ResetButton_Click" Width="80" Margin="0,0,10,0"
                        IsEnabled="{Binding HasUnsavedChanges}"/>
                <Button Content="Save" Click="SaveButton_Click" Width="80" Margin="0,0,10,0"
                        Background="#FF4CAF50" Foreground="White"/>
                <Button Content="Cancel" Click="CancelButton_Click" Width="80" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
