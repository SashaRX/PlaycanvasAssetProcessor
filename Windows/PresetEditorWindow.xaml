<Window x:Class="AssetProcessor.Windows.PresetEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:core="clr-namespace:AssetProcessor.TextureConversion.Core"
        mc:Ignorable="d"
        Title="Preset Editor" Height="750" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <ObjectDataProvider x:Key="CompressionFormatValues" MethodName="GetValues" ObjectType="{x:Type core:CompressionFormat}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:CompressionFormat"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="OutputFormatValues" MethodName="GetValues" ObjectType="{x:Type core:OutputFormat}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:OutputFormat"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="FilterTypeValues" MethodName="GetValues" ObjectType="{x:Type core:FilterType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:FilterType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="KTX2SupercompressionValues" MethodName="GetValues" ObjectType="{x:Type core:KTX2SupercompressionType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:KTX2SupercompressionType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="ColorSpaceValues" MethodName="GetValues" ObjectType="{x:Type core:ColorSpace}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:ColorSpace"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="ToktxFilterTypeValues" MethodName="GetValues" ObjectType="{x:Type core:ToktxFilterType}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:ToktxFilterType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="WrapModeValues" MethodName="GetValues" ObjectType="{x:Type core:WrapMode}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:WrapMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="ToksvigCalculationModeValues" MethodName="GetValues" ObjectType="{x:Type core:ToksvigCalculationMode}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:ToksvigCalculationMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="HistogramModeValues" MethodName="GetValues" ObjectType="{x:Type core:HistogramMode}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:HistogramMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="HistogramChannelModeValues" MethodName="GetValues" ObjectType="{x:Type core:HistogramChannelMode}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:HistogramChannelMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="HistogramProcessingModeValues" MethodName="GetValues" ObjectType="{x:Type core:HistogramProcessingMode}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:HistogramProcessingMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="HistogramQuantizationValues" MethodName="GetValues" ObjectType="{x:Type core:HistogramQuantization}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:HistogramQuantization"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <!-- Name and Description -->
            <GroupBox Header="Preset Info" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Name:" Margin="0,0,0,3"/>
                    <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>
                    <TextBlock Text="Description:" Margin="0,0,0,3"/>
                    <TextBox x:Name="DescriptionTextBox" Height="50" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
            </GroupBox>

            <!-- Filename Suffixes -->
            <GroupBox Header="Filename Suffixes (for auto-detection)" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Enter filename suffixes that match this preset (e.g., _albedo, _diffuse):"
                               TextWrapping="Wrap" Margin="0,0,0,5" FontSize="10" Foreground="Gray"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ListBox x:Name="SuffixesListBox" Grid.Column="0" Height="100" Margin="0,0,5,0"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Button Content="Add" Width="60" Margin="0,0,0,5" Click="AddSuffix_Click"/>
                            <Button Content="Remove" Width="60" Click="RemoveSuffix_Click"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="NewSuffixTextBox" Grid.Column="0" Margin="0,0,5,0"
                                 ToolTip="Enter new suffix (e.g., _albedo)" KeyDown="NewSuffixTextBox_KeyDown"/>
                        <Button Content="+" Grid.Column="1" Width="30" Click="AddSuffix_Click"
                                ToolTip="Add suffix"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Compression Settings -->
            <GroupBox Header="Compression" Margin="0,0,0,10">
                <StackPanel>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Format:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" x:Name="CompressionFormatComboBox"
                                  ItemsSource="{Binding Source={StaticResource CompressionFormatValues}}"
                                  SelectionChanged="CompressionFormatComboBox_SelectionChanged"/>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Output:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" x:Name="OutputFormatComboBox"
                                  ItemsSource="{Binding Source={StaticResource OutputFormatValues}}"
                                  SelectionChanged="OutputFormatComboBox_SelectionChanged"/>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Color Space:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" x:Name="ColorSpaceComboBox"
                                  ItemsSource="{Binding Source={StaticResource ColorSpaceValues}}"/>
                    </Grid>

                    <!-- KTX2 Supercompression -->
                    <StackPanel x:Name="KTX2Panel" Visibility="Collapsed" Margin="0,5,0,0">
                        <TextBlock Text="KTX2 Supercompression:" Margin="0,0,0,3"/>
                        <ComboBox x:Name="KTX2SupercompressionComboBox"
                                  ItemsSource="{Binding Source={StaticResource KTX2SupercompressionValues}}"/>
                        <TextBlock Text="Zstandard Level (1-22):" Margin="0,5,0,3"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="KTX2ZstdLevelSlider" Grid.Column="0"
                                    Minimum="1" Maximum="22" Value="3"
                                    TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=KTX2ZstdLevelSlider, Path=Value}"
                                       Width="40" TextAlignment="Right"/>
                        </Grid>
                    </StackPanel>

                    <!-- ETC1S Quality -->
                    <StackPanel x:Name="ETC1SPanel" Visibility="Collapsed" Margin="0,10,0,0">
                        <TextBlock Text="ETC1S Quality (0-255):" Margin="0,0,0,3"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="ETC1SQualitySlider" Grid.Column="0"
                                    Minimum="0" Maximum="255" Value="128"
                                    TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=ETC1SQualitySlider, Path=Value}"
                                       Width="40" TextAlignment="Right"/>
                        </Grid>
                        <CheckBox x:Name="UseETC1SRDOCheckBox" Content="Use RDO for ETC1S" Margin="0,5,0,0" IsChecked="True"
                                  Checked="UseETC1SRDOCheckBox_Changed" Unchecked="UseETC1SRDOCheckBox_Changed"/>
                        <TextBlock Text="RDO Lambda (0.1-10.0):" Margin="0,5,0,3"
                                   IsEnabled="{Binding ElementName=UseETC1SRDOCheckBox, Path=IsChecked}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="ETC1SRDOLambdaSlider" Grid.Column="0"
                                    Minimum="0.1" Maximum="10.0" Value="1.0"
                                    TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,10,0"
                                    IsEnabled="{Binding ElementName=UseETC1SRDOCheckBox, Path=IsChecked}"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=ETC1SRDOLambdaSlider, Path=Value, StringFormat={}{0:F1}}"
                                       Width="40" TextAlignment="Right"/>
                        </Grid>
                    </StackPanel>

                    <!-- UASTC Quality -->
                    <StackPanel x:Name="UASTCPanel" Visibility="Collapsed" Margin="0,10,0,0">
                        <TextBlock Text="UASTC Quality (0-4):" Margin="0,0,0,3"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="UASTCQualitySlider" Grid.Column="0"
                                    Minimum="0" Maximum="4" Value="2"
                                    TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=UASTCQualitySlider, Path=Value}"
                                       Width="40" TextAlignment="Right"/>
                        </Grid>
                        <CheckBox x:Name="UseUASTCRDOCheckBox" Content="Use RDO for UASTC" Margin="0,5,0,0" IsChecked="True"
                                  Checked="UseUASTCRDOCheckBox_Changed" Unchecked="UseUASTCRDOCheckBox_Changed"/>
                        <TextBlock Text="RDO Lambda (0.1-10.0):" Margin="0,5,0,3"
                                   IsEnabled="{Binding ElementName=UseUASTCRDOCheckBox, Path=IsChecked}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="UASTCRDOLambdaSlider" Grid.Column="0"
                                    Minimum="0.1" Maximum="10.0" Value="1.0"
                                    TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,10,0"
                                    IsEnabled="{Binding ElementName=UseUASTCRDOCheckBox, Path=IsChecked}"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=UASTCRDOLambdaSlider, Path=Value, StringFormat={}{0:F1}}"
                                       Width="40" TextAlignment="Right"/>
                        </Grid>
                    </StackPanel>

                    <CheckBox x:Name="PerceptualModeCheckBox" Content="Perceptual Mode" Margin="0,10,0,0" IsChecked="True"/>
                    <CheckBox x:Name="UseMultithreadingCheckBox" Content="Use Multithreading" IsChecked="True" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Mipmap Settings -->
            <GroupBox Header="Mipmaps" Margin="0,0,0,10">
                <StackPanel>
                    <CheckBox x:Name="GenerateMipmapsCheckBox" Content="Generate Mipmaps" IsChecked="True" Margin="0,0,0,5"/>

                    <CheckBox x:Name="CustomMipmapsCheckBox" Content="Custom Mipmaps (Manual)" IsChecked="False" Margin="0,0,0,5"
                              Checked="CustomMipmapsCheckBox_Changed" Unchecked="CustomMipmapsCheckBox_Changed"
                              ToolTip="Use manual mipmap generation (app-side) instead of automatic (toktx --genmipmap)"/>

                    <!-- MANUAL MIPMAPS SETTINGS -->
                    <StackPanel x:Name="ManualMipmapsPanel" Visibility="Collapsed">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Manual Filter:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="MipFilterComboBox"
                                      ItemsSource="{Binding Source={StaticResource FilterTypeValues}}"/>
                        </Grid>

                        <CheckBox x:Name="ApplyGammaCorrectionCheckBox" Content="Apply Gamma Correction (sRGB)" IsChecked="True" Margin="0,0,0,3"
                                  ToolTip="Apply gamma 2.2 correction during mipmap generation (for sRGB textures like albedo)"/>
                        <CheckBox x:Name="NormalizeNormalsCheckBox" Content="Normalize Normals Each Mip Level" Margin="0,0,0,3"
                                  ToolTip="Renormalize normal vectors during manual mipmap generation (works with all modes)"/>
                    </StackPanel>

                    <!-- AUTOMATIC MIPMAPS SETTINGS -->
                    <StackPanel x:Name="AutomaticMipmapsPanel" Visibility="Visible">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Toktx Filter:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       ToolTip="Filter for toktx auto-mipmap generation (--genmipmap --filter)"/>
                            <ComboBox Grid.Column="1" x:Name="ToktxFilterComboBox"
                                      ItemsSource="{Binding Source={StaticResource ToktxFilterTypeValues}}"/>
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Wrap Mode:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       ToolTip="Texture sampling mode at edges (--wmode)"/>
                            <ComboBox Grid.Column="1" x:Name="WrapModeComboBox"
                                      ItemsSource="{Binding Source={StaticResource WrapModeValues}}"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Alpha Options -->
            <GroupBox Header="Alpha Channel" Margin="0,0,0,10">
                <StackPanel>
                    <CheckBox x:Name="ForceAlphaCheckBox" Content="Force Alpha Channel" Margin="0,0,0,3"
                              Checked="AlphaCheckBox_Checked" Unchecked="AlphaCheckBox_Unchecked"
                              ToolTip="Add alpha channel (--target_type RGBA)"/>
                    <CheckBox x:Name="RemoveAlphaCheckBox" Content="Remove Alpha Channel" Margin="0,0,0,3"
                              Checked="AlphaCheckBox_Checked" Unchecked="AlphaCheckBox_Unchecked"
                              ToolTip="Remove alpha channel (--target_type RGB)"/>
                </StackPanel>
            </GroupBox>

            <!-- Normal Maps -->
            <GroupBox Header="Normal Maps" Margin="0,0,0,10">
                <StackPanel>
                    <CheckBox x:Name="ConvertToNormalMapCheckBox" Content="Convert: RGB-XYZ → RGBA-XY (--normal_mode)" Margin="0,0,0,3"
                              ToolTip="Converts 3-component (R=X,G=Y,B=Z) to 2-channel (RGB=X,A=Y). Only works with automatic mipmaps (--genmipmap)."/>
                    <CheckBox x:Name="NormalizeVectorsCheckBox" Content="Normalize Vectors (--normalize)" Margin="0,0,0,3"
                              ToolTip="Normalize input normal vectors to unit length. Only works with automatic mipmaps (--genmipmap)."/>
                </StackPanel>
            </GroupBox>

            <!-- Toksvig Settings -->
            <GroupBox Header="Toksvig (Gloss Anti-Aliasing)" Margin="0,0,0,10">
                <StackPanel>
                    <CheckBox x:Name="ToksvigEnabledCheckBox" Content="Enable Toksvig Correction" Margin="0,0,0,5"
                              Checked="ToksvigEnabledCheckBox_Changed" Unchecked="ToksvigEnabledCheckBox_Changed"
                              ToolTip="Apply Toksvig variance-based gloss adjustment for specular anti-aliasing. Requires Custom Mipmaps enabled."/>

                    <StackPanel x:Name="ToksvigSettingsPanel" IsEnabled="{Binding ElementName=ToksvigEnabledCheckBox, Path=IsChecked}">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Calculation Mode:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       ToolTip="Classic (3x3, k^1.5) or Simplified (Box 2x2, linear k, threshold)"/>
                            <ComboBox Grid.Column="1" x:Name="ToksvigCalculationModeComboBox"
                                      ItemsSource="{Binding Source={StaticResource ToksvigCalculationModeValues}}"
                                      SelectionChanged="ToksvigCalculationModeComboBox_SelectionChanged"/>
                        </Grid>

                        <TextBlock Text="Composite Power (k) [0.5-8.0]:" Margin="0,0,0,3"
                                   ToolTip="Weight of variance influence on gloss"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="ToksvigCompositePowerSlider" Grid.Column="0"
                                    Minimum="0.5" Maximum="8.0" Value="1.0"
                                    TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=ToksvigCompositePowerSlider, Path=Value, StringFormat={}{0:F1}}"
                                       Width="40" TextAlignment="Right"/>
                        </Grid>

                        <TextBlock Text="Min Mip Level:" Margin="0,0,0,3"
                                   ToolTip="Minimum mipmap level to apply Toksvig (0 = apply to base level)"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="ToksvigMinMipLevelSlider" Grid.Column="0"
                                    Minimum="0" Maximum="10" Value="0"
                                    TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=ToksvigMinMipLevelSlider, Path=Value}"
                                       Width="40" TextAlignment="Right"/>
                        </Grid>

                        <CheckBox x:Name="ToksvigSmoothVarianceCheckBox" Content="Smooth Variance (Classic only)" IsChecked="True" Margin="0,0,0,5"
                                  ToolTip="Apply 3x3 blur to variance map (only in Classic mode)"/>

                        <CheckBox x:Name="ToksvigUseEnergyPreservingCheckBox" Content="Use Energy-Preserving Filtering" IsChecked="True" Margin="0,0,0,5"
                                  ToolTip="Apply energy-preserving filtering to preserve material energy (alpha² averaging). Prevents loss of specular highlights on distant mipmaps."/>

                        <StackPanel x:Name="ToksvigSimplifiedSettingsPanel" Visibility="Collapsed">
                            <TextBlock Text="Variance Threshold (Dead Zone):" Margin="0,0,0,3"
                                       ToolTip="Variance below this value is set to 0 (reduces noise)"/>
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="ToksvigVarianceThresholdSlider" Grid.Column="0"
                                        Minimum="0" Maximum="0.01" Value="0.002"
                                        TickFrequency="0.0001" SmallChange="0.0001" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=ToksvigVarianceThresholdSlider, Path=Value, StringFormat={}{0:F4}}"
                                           Width="50" TextAlignment="Right"/>
                            </Grid>
                        </StackPanel>

                        <TextBlock Text="Normal Map Path (leave empty for auto-detect):" Margin="0,0,0,3"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ToksvigNormalMapPathTextBox" Grid.Column="0" Margin="0,0,5,0"
                                     ToolTip="Path to normal map (empty = auto-detect)"/>
                            <Button Content="..." Grid.Column="1" Width="30"
                                    Click="BrowseToksvigNormalMap_Click"
                                    ToolTip="Browse for normal map"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Histogram Analysis -->
            <GroupBox Header="Histogram Analysis (Metadata Optimization)" Margin="0,0,0,10">
                <StackPanel>
                    <CheckBox x:Name="EnableHistogramCheckBox" Content="Enable Histogram Analysis" Margin="0,0,0,5"
                              Checked="EnableHistogramCheckBox_Changed" Unchecked="EnableHistogramCheckBox_Changed"
                              ToolTip="Analyze texture histogram to optimize compression by computing scale/offset normalization parameters"/>

                    <StackPanel x:Name="HistogramSettingsPanel" IsEnabled="{Binding ElementName=EnableHistogramCheckBox, Path=IsChecked}">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Analysis Mode:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       ToolTip="Off: disabled, Percentile: hard clamp outliers, PercentileWithKnee: soft-knee smoothing (recommended)"/>
                            <ComboBox Grid.Column="1" x:Name="HistogramModeComboBox"
                                      ItemsSource="{Binding Source={StaticResource HistogramModeValues}}"/>
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Processing Mode:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       ToolTip="MetadataOnly: lossless (GPU applies FMA), Preprocessing: lossy (modify pixels before compression)"/>
                            <ComboBox Grid.Column="1" x:Name="HistogramProcessingModeComboBox"
                                      ItemsSource="{Binding Source={StaticResource HistogramProcessingModeValues}}"/>
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Channel Mode:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       ToolTip="AverageLuminance: one scale/offset, PerChannel: RGB separate, PerChannelRGBA: RGBA separate"/>
                            <ComboBox Grid.Column="1" x:Name="HistogramChannelModeComboBox"
                                      ItemsSource="{Binding Source={StaticResource HistogramChannelModeValues}}"/>
                        </Grid>

                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Quantization:" VerticalAlignment="Center" Margin="0,0,10,0"
                                       ToolTip="Half16: 4 bytes (recommended), PackedUInt32: 4 bytes [0-1], Float32: 8 bytes (max precision)"/>
                            <ComboBox Grid.Column="1" x:Name="HistogramQuantizationComboBox"
                                      ItemsSource="{Binding Source={StaticResource HistogramQuantizationValues}}"/>
                        </Grid>

                        <TextBlock Text="Percentile Low (%) [0.0-100.0]:" Margin="0,5,0,3"
                                   ToolTip="Lower percentile to ignore outliers (e.g., 0.5% darkest pixels)"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="HistogramPercentileLowSlider" Grid.Column="0"
                                    Minimum="0.0" Maximum="10.0" Value="0.5"
                                    TickFrequency="0.1" SmallChange="0.1" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=HistogramPercentileLowSlider, Path=Value, StringFormat={}{0:F1}%}"
                                       Width="50" TextAlignment="Right"/>
                        </Grid>

                        <TextBlock Text="Percentile High (%) [0.0-100.0]:" Margin="0,0,0,3"
                                   ToolTip="Upper percentile to ignore outliers (e.g., 99.5% brightest pixels)"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="HistogramPercentileHighSlider" Grid.Column="0"
                                    Minimum="90.0" Maximum="100.0" Value="99.5"
                                    TickFrequency="0.1" SmallChange="0.1" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=HistogramPercentileHighSlider, Path=Value, StringFormat={}{0:F1}%}"
                                       Width="50" TextAlignment="Right"/>
                        </Grid>

                        <TextBlock Text="Knee Width (soft-knee smoothing) [0.0-1.0]:" Margin="0,0,0,3"
                                   ToolTip="Width of soft-knee region for smoothstep smoothing (0.02 = 2% recommended)"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="HistogramKneeWidthSlider" Grid.Column="0"
                                    Minimum="0.0" Maximum="0.1" Value="0.02"
                                    TickFrequency="0.001" SmallChange="0.001" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=HistogramKneeWidthSlider, Path=Value, StringFormat={}{0:F3}}"
                                       Width="50" TextAlignment="Right"/>
                        </Grid>

                        <TextBlock Text="Min Range Threshold [0.0-1.0]:" Margin="0,0,0,3"
                                   ToolTip="Skip normalization if range is too narrow (avoids noise amplification for nearly constant textures)"/>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="HistogramMinRangeThresholdSlider" Grid.Column="0"
                                    Minimum="0.0" Maximum="0.1" Value="0.01"
                                    TickFrequency="0.001" SmallChange="0.001" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding ElementName=HistogramMinRangeThresholdSlider, Path=Value, StringFormat={}{0:F3}}"
                                       Width="50" TextAlignment="Right"/>
                        </Grid>

                        <CheckBox x:Name="WriteHistogramParamsCheckBox" Content="Write Analysis Parameters to KTX2 Metadata" IsChecked="True" Margin="0,5,0,0"
                                  ToolTip="Store histogram analysis parameters (percentiles, knee) in KTX2 Key-Value Data for debugging"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Advanced Options -->
            <GroupBox Header="Advanced" Margin="0,0,0,10">
                <StackPanel>
                    <CheckBox x:Name="LinearMipFilterCheckBox" Content="Linear Mip Filtering (basisu only)" Margin="0,0,0,3"
                              ToolTip="Use linear filtering for basisu compression"/>
                    <CheckBox x:Name="RemoveTemporaryMipmapsCheckBox" Content="Remove Temporary Mipmaps" IsChecked="True" Margin="0,0,0,3"
                              ToolTip="Delete temporary mipmap files after processing"/>
                </StackPanel>
            </GroupBox>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Width="80" Margin="0,0,10,0" Click="Save_Click" IsDefault="True"/>
                <Button Content="Cancel" Width="80" Click="Cancel_Click" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
